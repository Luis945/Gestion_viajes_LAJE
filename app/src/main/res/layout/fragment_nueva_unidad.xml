<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.gestion_viajes.Nueva_unidad"
    android:background="@color/amarillo">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Nueva Unidad"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="50dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/titulo"

            />
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="10dp"
            android:layout_below="@id/titulo"
            android:background="#000"
            android:layout_centerInParent="true"
            android:id="@+id/relativeLayout"></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/titulo"
            android:id="@+id/contenedor_nombre"

            android:layout_marginTop="80dp">

            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="number" />

        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/contenedorbotones"
            android:layout_below="@id/contenedor_nombre"
            android:layout_marginTop="90dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/registrar"
                android:text="Registrar"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:background="#000"
                android:layout_marginLeft="20dp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/limpiar"
                android:text="Limpiar"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:background="#000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/relativeLayout"

            android:layout_alignRight="@+id/relativeLayout"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Numero de unidad"
            android:textSize="23dp" />


    </RelativeLayout>

</FrameLayout>
