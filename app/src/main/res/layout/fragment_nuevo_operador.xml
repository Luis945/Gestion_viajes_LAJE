<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.gestion_viajes.Nuevo_operador"
    android:background="@color/amarillo">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Nuevo operador"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/titulo"

            />
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="10dp"
            android:layout_below="@id/titulo"
            android:background="#000"
            android:layout_centerInParent="true"
            android:id="@+id/linea"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/linea"
            android:id="@+id/contenedor_num_op"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="NÂ°Operadora"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />

            <EditText
                android:id="@+id/txt_num_op"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="230dp"
                android:inputType="textImeMultiLine|number" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/contenedor_num_op"
            android:id="@+id/contenedor_nombre"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:text="Nombre"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />

            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:inputType="text|textImeMultiLine" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/contenedor_nombre"
            android:id="@+id/contenedor_apellidos"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Apellidos"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />

            <EditText
                android:id="@+id/txt_apellidos"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:inputType="text|textImeMultiLine" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/contenedor_apellidos"
            android:id="@+id/contenedor_pass">


            <TextView
                android:layout_width="109dp"
                android:layout_height="50dp"
                android:text="Password"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />

            <EditText
                android:id="@+id/txt_pass"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="130dp"
                android:inputType="text|textImeMultiLine|textPassword" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/contenedorbotones"
            android:layout_below="@id/contenedor_pass"
            android:layout_marginTop="60dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/registrar"
                android:text="Registrar"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:background="#000"
                android:layout_marginLeft="50dp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/limpiar"
                android:text="Limpiar"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:background="#000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                />
        </RelativeLayout>







    </RelativeLayout>
    <ProgressBar
        android:layout_marginTop="130dp"
        android:id="@+id/barrawait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        />

</FrameLayout>
