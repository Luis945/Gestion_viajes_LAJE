<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.gestion_viajes.nueva_Basee"
    android:background="@color/amarillo"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Nueva base"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/titulo"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/titulo"
            android:id="@+id/contenedor_nombre">

            <TextView
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:text="Nombre"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />
            <EditText
                android:layout_width="239dp"
                android:layout_height="35dp"
                android:layout_marginLeft="130dp"
                android:id="@+id/txt_nombre"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/contenedor_nombre"
            android:id="@+id/contenedor_dir">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="DirecciÃ³n"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />
            <EditText
                android:layout_width="239dp"
                android:layout_height="35dp"
                android:layout_marginLeft="130dp"
                android:id="@+id/txt_direccion"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/contenedor_dir"
            android:id="@+id/contendedor_tipo">

            <TextView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Tipo"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"

                />
            <Spinner
                android:layout_width="239dp"
                android:layout_height="35dp"
                android:layout_marginLeft="130dp"
                android:id="@+id/combotipo"></Spinner>
        </RelativeLayout>







    </RelativeLayout>

</FrameLayout>
