<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.gestion_viajes.Nueva_colonia"
    android:background="@color/amarillo"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Nueva Colonia"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/titulo"

            />
        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="10dp"
            android:layout_below="@id/titulo"
            android:background="#000"
            android:layout_centerInParent="true"
            ></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/titulo"
            android:id="@+id/contenedor_nombre"

            android:layout_marginTop="80dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Nombre de la colonia"
                android:fontFamily="@font/montserrat"
                android:textSize="23dp"
                android:layout_marginLeft="20dp"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/contenedor_nombre"
            android:id="@+id/cont_edit"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <EditText
                android:layout_centerInParent="true"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:hint="Ingresa el nombre"
                android:textColorHint="@color/negro"
                android:id="@+id/txt_nombre"
                />

        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/contenedorbotones"
            android:layout_below="@id/contenedor_nombre"
            android:layout_marginTop="150dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/registrar"
                android:text="Registrar"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:background="#000"
                android:layout_marginLeft="50dp"

                />

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/limpiar"
                android:text="Limpiar"
                android:textColor="#fff"
                android:fontFamily="@font/montserrat"
                android:background="#000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"

                />
        </RelativeLayout>







    </RelativeLayout>

</FrameLayout>
